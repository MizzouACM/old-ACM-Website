<% include precontent %>
<% if (user) {%>
	<% if (currentUserIsMember) { %>
		<form style="float:right;" method="get" action="#">
			<input type="hidden" name="group" value="<%= title %>">
			<input type="submit" class="btn" value="Leave Group">
		</form>
	<% } else { %>
		<form style="float:right;" method="get" action="/addGroupMember">
			<input type="hidden" name="group" value="<%= title %>">
			<input type="submit" class="btn" value="Join this Group">
		</form>
	<% } %>
<% } else { %>
	<a href="/auth/Google" style="float:right;" class="no-ajaxy btn">Login to Join this Group</a>
<% } %>
<b>Group Description</b>: <%= description %><br>
<b>Meeting Information</b>: <%= meetingInformation%><br>
<b>Members</b>:
<ul>
	<% members.forEach(function(member) { %>
		<li><%= member %></li>
	<% }) %>
</ul>
<% include postcontent %>